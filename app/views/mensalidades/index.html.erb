<p id="notice"><%= notice %></p>

<h1>Mensalidades</h1>

<table>
  <thead>
    <tr>
      <th>Inquilino</th>
      <th>Mes</th>
      <th>Pago</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mensalidades.each do |mensalidade| %>
      <tr>
        <td><%= mensalidade.inquilino %></td>
        <td><%= mensalidade.mes %></td>
        <td><%= mensalidade.pago %></td>
        <td><%= link_to 'Show', mensalidade %></td>
        <td><%= link_to 'Edit', edit_mensalidade_path(mensalidade) %></td>
        <td><%= link_to 'Destroy', mensalidade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

